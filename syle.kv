<WeatherScreen>:  # Визначення основного екрану погоди
    MDBoxLayout:  # Використання BoxLayout для вертикального розташування елементів
        orientation: 'vertical'  # Встановлення вертикальної орієнтації для Layout
        MDTopAppBar:  # Додавання верхньої панелі додатка
            title: "LCloud"  # Заголовок панелі
            right_action_items: [["dots-vertical", lambda x: app.callback()]]  # Кнопка для відкриття меню

        MDBoxLayout:  # Додатковий BoxLayout для вводу даних
            spacing: "10sp"  # Відстань між елементами
            size_hint: 0.9, None  # Встановлення розміру, ширина 90% від батьківського контейнера
            pos_hint: {'center_x': 0.5}  # Вирівнювання по центру по осі X
            size_hint: 0.9 , 0.5 
            
            MDTextField:  # Поле для вводу тексту
                id: city
                hint_text: "Введіть місто"  # Підказка для користувача

            MDIconButton:  # Кнопка з іконкою
                id: search_btn
                on_press: root.search()
                icon: "search-web"  # Іконка для кнопки
                icon_size: "32sp"  # Розмір іконки
                md_bg_color: app.theme_cls.primary_color  # Фоновий колір кнопки, відповідний темі

        MDBoxLayout:  # Ще один BoxLayout для відображення інформації про погоду
            orientation: 'vertical'  # Вертикальна орієнтація
            pos_hint:{'center_x':0.5}  # Вирівнювання по центру
            size_hint: 0.9 , 0.4  # Розмір: 90% ширини та 40% висоти

            AsyncImage:
                id: icon
                size:("150sp","150sp")
                fit_mode: 'contain'
                source:'https://openweathermap.org/img/wn/10d@2x.png'

            MDLabel:
                id: temp
                text: "14°C"
                font_style: 'H1'
                halign: 'center'
            MDLabel:
                id: feels_like
                text: "Відчувається як"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: desc
                text: "Ясно"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: humidity
                text: "Вологість:"
                font_style: 'Body1'
                halign: 'center'
            MDLabel:
                id: wind
                text: "Вітер:"
                font_style: 'Body1'
                halign: 'center'
            MDFillRoundFlatButton:
                text: "Дивитися прогноз"
                pos_hint: {'center_x': 0.5)
            Widget:
                size_hint_y: None
                height: "50sp"
            MDFillRoundFlatButton:
                text: "Дивитися прогноз"
                pos_hint: {'center_x': 0.5}
            Widget:
                size_hint_y: None
                height: "50sp"


<ForecastScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"
    MDTopAppBar:
        title: "Прогноз погоди"
        right_action_items: [["dots-vertical", lambda x: app.callback()]]